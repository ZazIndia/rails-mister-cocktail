<div class="container">
  <div class="flex-btw-center">
    <h1><%= @cocktail.name %></h1>
    <img class="avatar" alt="avatar" src="https://res.cloudinary.com/spark-and-rise-ltd/image/upload/w_1000,c_fill,ar_1:1,g_auto,r_max,bo_5px_solid_red,b_rgb:262c35/v1566120824/johann-trasch-b-3uxA93zUc-unsplash_uqvupc.jpg"/>
  </div>
  <%= cl_image_tag @cocktail.photo, height: 200 %>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= render "doses/form", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
 <%= link_to "Back to all cocktails", root_path %>

<%= link_to "Destroy", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } %>
